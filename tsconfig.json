{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "es2015",
    "target": "es2017",
    "lib": [
      "es6",
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "components",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "rollup.config.js"
  ],
  "include": [
    "components/**/*"
  ]
}